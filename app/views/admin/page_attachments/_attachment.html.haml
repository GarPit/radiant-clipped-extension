- attachment_form ||= false
- if attachment_form
  - attachment ||= attachment_form.object
- else 
  - attachment ||= @attachment

- page = attachment.page
- asset = attachment.asset
- asset_type = asset.image? ? "image" : "link"
- dom_id = "asset_#{asset.id}"

%li{:class => "#{asset_type} asset", :id => dom_id}
  = link_to image_tag(asset.thumbnail(:sample)), asset.thumbnail, :title => asset.title
  .controls
    %span.label
      = asset.title
    - if asset.attached_to?(page)
      = link_to t('assets_extension.insert').downcase, '#', :class => 'insert_asset'
      - if attachment_form
        = attachment_form.hidden_field :_destroy, :class => 'destroyer'
        = link_to t('assets_extension.detach').downcase, '#', :class => 'detach_asset'
